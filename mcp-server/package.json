  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "@types/qrcode-terminal": "^0.12.2",
    "jest": "^30.2.0",
    "pino-pretty": "^13.1.3",
